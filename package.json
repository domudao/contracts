    "@rarible/custom-matchers": "0.3.0",
    "@rarible/lazy-mint": "0.5.5",
    "@rarible/meta-tx": "0.1.2",
    "@rarible/tokens": "0.7.0",
    "@rarible/transfer-proxy": "0.3.0",
    "abdk-libraries-solidity": "^3.0.0",
    "hardhat-watcher": "^2.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@ethersproject/abstract-signer": "^5.1.0",
    "@ethersproject/bignumber": "^5.1.1",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-defender": "^1.5.1",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@rarible/exchange-interfaces": "0.4.0",
    "@rarible/lib-asset": "0.1.2",
    "@rarible/libraries": "0.1.2",
    "@rarible/royalties": "0.7.4",
    "@rarible/royalties-upgradeable": "0.7.4",
    "@typechain/ethers-v5": "^5.0.0",
    "@typechain/hardhat": "^1.0.1",
    "@types/chai": "^4.2.13",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.2.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.6.2",
    "fs-extra": "^9.0.1",
    "hardhat": "2.6.6",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-beta.9",
    "shelljs": "^0.8.4",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.10.2",
    "typechain": "^4.0.1",
    "typescript": "<4.1.0"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "hardhat clean",
    "commit": "git-cz",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:network": "hardhat run scripts/deploy.ts --network",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:list-different",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test",
    "typechain": "hardhat typechain",
    "test:watch": "hardhat watch test --show-stack-traces"
  }
}
